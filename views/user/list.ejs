<%- include ../layouts/header.ejs %>
    <% if (messages.error) { %>
        <p style="color: red">
            <%- messages.error %>
        </p>
        <% } %>
            <% if (messages.success) { %>
                <p style="color: red">
                    <%- messages.success %>
                </p>
                <% } %>



                    <div class="col-lg-12" style="margin-top: 60px; width: 1080px; margin-left: 250px;">
                        <section class="panel">
                            <header class="panel-heading" style="">
                                Daftar Buku
                            </header>
                            <div>
                                <table class="table" ui-jq="footable" ui-options='{
                        "paging": {
                            "enabled": true
                        },
                        "filtering": {
                            "enabled": true
                        },
                        "sorting": {
                            "enabled": true
                        }}'>
                                    <thead>
                                        <tr>
                                            <th style="text-align: center; font-size: 18px;">Nama</th>
                                            <th style="text-align: center;  font-size: 18px; " colspan="3">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr data-expanded="true">
                                            <% if(data) { %>
                                                <% data.forEach(function(user){ %>
                                                    <tr>
                                                        <td style="font-size: 16px;">
                                                            <%= user.judul %>
                                                        </td>
                                                        <td>
                                                            <div style="float: left">
                                                                <button style="margin-left: 170px;background-color: rgb(18, 87, 119); color: white; border: 0; border-radius: 3px; width: 80px; height: 40px; margin-right: -140px;"> <a href="/users/buku/detail/<%= user._id %>" style="color: white;">Detail</a></button>
                                                                <td style="margin-right: -50px;">
                                                                    <button style="background-color: yellow; color: black; border: 0; border-radius: 3px; width: 80px; height: 40px; margin-right: 60px;">
                                                                        <a href="/user/edit/<%= user._id %>" style="color: color;">Edit</a>
                                                                    </button>
                                                                </td>
                                                                <form action="/users/delete/<%= user._id %>" method="post" style "0">
                                                                    <td>
                                                                        <input type="submit" name="delete" value="Delete" style="background-color: red; border: 0; border-radius: 3px; width: 80px; height: 40px; color: white; margin-LEFT: -230px">
                                                                    </td>
                                                                    <input type="hidden" name="_method" value="DELETE">
                                                                </form>

                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                                        <% } %>
                                      
